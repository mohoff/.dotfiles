# Show effective git config in a repo: git config --list --show-origin

[user]
	name = Moritz Hoffmann

[core]
   pager = diff-so-fancy | less --tabs=4 -RFX
   #pager = delta --dark

[interactive]
  diffFilter = delta
[color]
   ui = true
[color "diff-highlight"]
   oldNormal = red bold
   oldHighlight = red bold 52
   newNormal = green bold
   newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

# Overwritten by init.sh because we want to use $DOTFILES instead of hard-coding the directories. Git config does not support expansion
# Order matters using this approach - last matching directive is used
[includeIf "gitdir:~/dev/"]
	path = /Users/mo/.dotfiles/git/dev.gitconfig
[includeIf "gitdir:~/dev/fpcomplete/"]
	path = /Users/mo/.dotfiles/git/fpco.gitconfig
